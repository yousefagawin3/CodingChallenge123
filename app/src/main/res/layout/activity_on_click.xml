<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.onclick.OnClickActivity">


    <ImageView
            android:id="@+id/image_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/trackName_tv"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@id/image_iv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            android:layout_width="0dp" android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/trackPrice_tv"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/trackName_tv"
            app:layout_constraintStart_toEndOf="@id/image_iv"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp" android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/genre_tv"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/trackPrice_tv"
            app:layout_constraintStart_toEndOf="@id/image_iv"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp" android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/longDesc_tv"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/image_iv"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>



</androidx.constraintlayout.widget.ConstraintLayout>